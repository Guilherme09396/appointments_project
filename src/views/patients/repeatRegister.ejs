<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
  <title>Document</title>
</head>
<body>
  <%- include("../partials/nav")%>

  <div class="container mt-4">
    <% erros.forEach(erro => {%>
      <div class="alert alert-danger" role="alert">
        <%=erro.name%>
      </div>    
    <%})%>
    <h3 class="h1">Novo paciente</h3>
  <form action="/paciente?_method=post" method="post">
    <div class="container text-center">
      <div class="row align-items-start">
        <div class="col mt-4">
          <input type="text" name="name" id="name" placeholder="Nome do paciente" class="form-control" value="<%=name%>">
          <input type="email" name="email" id="email" placeholder="email@dominio.com" class="form-control" value="<%=email%>">
          <input type="text" name="birthDate" id="birthDate" class="form-control date" value="<%=birthDate%>">
          <input type="text" name="cpf" id="cpf" placeholder="CPF (insira só os números)" class="form-control cpf" value="<%=cpf%>">
          <input type="text" name="telephone" id="telephone" placeholder="Telefone" class="form-control phone_with_ddd" value="<%=telephone%>">        
        </div>
        <div class="col mt-4">
          <input type="text" name="zipcode" id="zipcode" placeholder="Cep" class="form-control cep" value="<%=zipcode%>">
          <input type="text" name="state" id="state" placeholder="Estado" class="form-control" value="<%=state%>">      
          <input type="text" name="city" id="city" placeholder="Cidade" class="form-control" value="<%=city%>">      
          <input type="text" name="road" id="road" placeholder="Rua" class="form-control" value="<%=road%>">      
          <input type="text" name="district" id="district" placeholder="Bairro" class="form-control" value="<%=district%>">      
        </div>
        <div class="col mt-4">
          <input type="number" name="houseNumber" id="houseNumber" placeholder="Número da casa" class="form-control" value="<%=houseNumber%>"> 
        </div>
      </div>
    </div>
   

    <button style="margin-left: 15px;" class="btn btn-success mt-4">Cadastrar</button>  
  </form>
  </div>
  

</body>
<%- include("../partials/scripts")%>
<script>
    $('.cpf').mask('000.000.000-00', {reverse: true});
    $('.phone_with_ddd').mask('(00) 0000-0000');
    $('.cep').mask('00000-000');
    $('.date').mask('00/00/0000', {placeholder: "Data de nascimento"});
</script>
</html>

